---
import SectionHeading from './SectionHeading.astro';
import contact from '../content/contact.json';

const socialIcons: Record<string, string> = {
  github: 'M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22',
  linkedin: 'M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6zM2 9h4v12H2zM4 6a2 2 0 1 0 0-4 2 2 0 0 0 0 4z',
  twitter: 'M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z',
};
---

<section id="contact" class="section">
  <div class="container">
    <div class="contact-wrapper animate-scale">
      <div class="contact-glow"></div>

      <SectionHeading
        title="Contact"
        subtitle={contact.description}
        align="center"
      />

      <h3 class="contact-headline">{contact.headline}</h3>

      <a href={`mailto:${contact.email}`} class="email-link">
        {contact.email}
      </a>

      <div class="social-links">
        {contact.socials.map((social) => (
          <a
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class="social-link"
            aria-label={social.name}
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d={socialIcons[social.icon] || ''}></path>
            </svg>
            <span>{social.name}</span>
          </a>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .section {
    padding: var(--section-gap) 2rem;
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
  }

  .contact-wrapper {
    text-align: center;
    position: relative;
    padding: 4rem 2rem;
    border-radius: 24px;
    background: rgba(49, 50, 68, 0.15);
    border: 1px solid var(--ctp-surface0);
    overflow: hidden;
  }

  .contact-glow {
    position: absolute;
    top: -100px;
    left: 50%;
    transform: translateX(-50%);
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(203, 166, 247, 0.08) 0%, transparent 70%);
    pointer-events: none;
  }

  .contact-headline {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--ctp-text);
    margin-bottom: 1.5rem;
    position: relative;
  }

  .email-link {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 1.15rem;
    color: var(--ctp-mauve);
    padding: 0.75rem 2rem;
    border: 1px solid rgba(203, 166, 247, 0.3);
    border-radius: 12px;
    transition: all 0.3s ease;
    margin-bottom: 2.5rem;
    position: relative;
  }

  .email-link:hover {
    background: rgba(203, 166, 247, 0.08);
    border-color: var(--ctp-mauve);
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(203, 166, 247, 0.15);
    color: var(--ctp-mauve);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    position: relative;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.25rem;
    border-radius: 10px;
    background: rgba(49, 50, 68, 0.4);
    border: 1px solid var(--ctp-surface0);
    color: var(--ctp-subtext0);
    font-size: 0.85rem;
    font-weight: 500;
    transition: all 0.25s ease;
  }

  .social-link:hover {
    color: var(--ctp-text);
    border-color: var(--ctp-surface1);
    transform: translateY(-2px);
  }

  @media (max-width: 640px) {
    .contact-wrapper {
      padding: 2.5rem 1.5rem;
    }

    .email-link {
      font-size: 0.95rem;
    }

    .social-links {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
