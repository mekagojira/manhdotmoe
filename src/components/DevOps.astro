---
import SectionHeading from "./SectionHeading.astro";
import Icon from "./Icon.astro";
import devops from "../content/devops.json";
import { getTechIcon } from "../utils/tech-icons";
---

<section id="devops" class="section">
  <div class="container">
    <SectionHeading title="DevOps" subtitle={devops.subtitle} />

    <div class="devops-hero animate-on-scroll">
      <p>{devops.summary}</p>
    </div>

    <div class="pillar-grid">
      {
        devops.pillars.map((pillar, i) => (
          <article
            class="pillar-card animate-on-scroll"
            style={`transition-delay: ${i * 0.1}s`}
          >
            <div class="pillar-head">
              <div class="pillar-icon">
                <Icon name={pillar.icon} size={18} />
              </div>
              <h3>{pillar.title}</h3>
            </div>
            <p class="pillar-desc">{pillar.description}</p>
            <div class="pillar-items">
              {pillar.items.map((item) => (
                <span class="pill">
                  <Icon name={getTechIcon(item)} size={11} />
                  {item}
                </span>
              ))}
            </div>
          </article>
        ))
      }
    </div>

    <div class="toolchain animate-on-scroll" style="transition-delay: 0.2s">
      <span class="toolchain-label">Core Toolchain</span>
      <div class="toolchain-items">
        {
          devops.toolchain.map((tool) => (
            <span class="tool-tag">
              <Icon name={getTechIcon(tool)} size={11} />
              {tool}
            </span>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .section {
    padding: var(--section-gap) 2rem;
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
  }

  .devops-hero {
    margin-bottom: 1.25rem;
    padding: 1.15rem 1.25rem;
    border: 1px solid var(--surface-border);
    border-radius: 14px;
    background: var(--surface-card-strong);
    box-shadow: var(--surface-shadow);
    backdrop-filter: blur(var(--glass-blur)) saturate(var(--glass-saturate))
      brightness(var(--glass-brightness));
    -webkit-backdrop-filter: blur(var(--glass-blur))
      saturate(var(--glass-saturate))
      brightness(var(--glass-brightness));
  }

  .devops-hero p {
    color: var(--ctp-subtext1);
    line-height: 1.7;
  }

  .pillar-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 1rem;
  }

  .pillar-card {
    position: relative;
    overflow: hidden;
    border-radius: 14px;
    border: 1px solid var(--surface-border);
    background: var(--surface-card);
    padding: 1.25rem;
    box-shadow: var(--surface-shadow);
    backdrop-filter: blur(var(--glass-blur)) saturate(var(--glass-saturate))
      brightness(var(--glass-brightness));
    -webkit-backdrop-filter: blur(var(--glass-blur))
      saturate(var(--glass-saturate))
      brightness(var(--glass-brightness));
    transition:
      border-color 0.3s ease,
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .pillar-card::before {
    content: "";
    position: absolute;
    inset: 0 0 auto 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.85),
      transparent
    );
    pointer-events: none;
  }

  .pillar-card:hover {
    border-color: var(--ctp-surface1);
    transform: translateY(-2px);
    box-shadow: var(--surface-shadow);
  }

  .pillar-head {
    display: flex;
    align-items: center;
    gap: 0.65rem;
    margin-bottom: 0.55rem;
  }

  .pillar-head h3 {
    font-size: 1rem;
    font-weight: 700;
    color: var(--ctp-text);
  }

  .pillar-icon {
    width: 32px;
    height: 32px;
    border-radius: 8px;
    border: 1px solid var(--accent-teal-border);
    background: var(--accent-teal-bg);
    color: var(--ctp-teal);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .pillar-desc {
    color: var(--ctp-subtext1);
    font-size: 0.88rem;
    line-height: 1.65;
    margin-bottom: 0.8rem;
  }

  .pillar-items {
    display: flex;
    flex-wrap: wrap;
    gap: 0.45rem;
  }

  .pill {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    font-size: 0.77rem;
    padding: 0.22rem 0.65rem;
    border-radius: 999px;
    border: 1px solid var(--accent-blue-border);
    color: var(--ctp-blue);
    background: var(--accent-blue-bg);
  }

  .pill :global(.icon) {
    width: 11px;
    height: 11px;
    opacity: 0.8;
    flex-shrink: 0;
  }

  .toolchain {
    margin-top: 1rem;
    border: 1px solid var(--surface-border);
    border-radius: 12px;
    padding: 0.95rem 1rem;
    background: var(--surface-card-strong);
    box-shadow: var(--surface-shadow);
    backdrop-filter: blur(var(--glass-blur)) saturate(var(--glass-saturate))
      brightness(var(--glass-brightness));
    -webkit-backdrop-filter: blur(var(--glass-blur))
      saturate(var(--glass-saturate))
      brightness(var(--glass-brightness));
  }

  .toolchain-label {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--ctp-overlay2);
    margin-bottom: 0.6rem;
  }

  .toolchain-items {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tool-tag {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    font-size: 0.78rem;
    color: var(--ctp-text);
    border: 1px solid var(--accent-teal-border);
    background: var(--accent-teal-bg);
    border-radius: 7px;
    padding: 0.2rem 0.6rem;
  }

  .tool-tag :global(.icon) {
    width: 11px;
    height: 11px;
    opacity: 0.85;
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .pillar-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
