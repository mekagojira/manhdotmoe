---
import SectionHeading from './SectionHeading.astro';
import Icon from './Icon.astro';
import expertise from '../content/expertise.json';

const colorMap: Record<string, { bg: string; border: string; text: string; tagBg: string; tagBorder: string }> = {
  blue: {
    bg: 'rgba(137, 180, 250, 0.06)',
    border: 'rgba(137, 180, 250, 0.15)',
    text: 'var(--ctp-blue)',
    tagBg: 'rgba(137, 180, 250, 0.06)',
    tagBorder: 'rgba(137, 180, 250, 0.12)',
  },
  mauve: {
    bg: 'rgba(203, 166, 247, 0.06)',
    border: 'rgba(203, 166, 247, 0.15)',
    text: 'var(--ctp-mauve)',
    tagBg: 'rgba(203, 166, 247, 0.06)',
    tagBorder: 'rgba(203, 166, 247, 0.12)',
  },
  teal: {
    bg: 'rgba(148, 226, 213, 0.06)',
    border: 'rgba(148, 226, 213, 0.15)',
    text: 'var(--ctp-teal)',
    tagBg: 'rgba(148, 226, 213, 0.06)',
    tagBorder: 'rgba(148, 226, 213, 0.12)',
  },
  peach: {
    bg: 'rgba(250, 179, 135, 0.06)',
    border: 'rgba(250, 179, 135, 0.15)',
    text: 'var(--ctp-peach)',
    tagBg: 'rgba(250, 179, 135, 0.06)',
    tagBorder: 'rgba(250, 179, 135, 0.12)',
  },
};
---

<section id="expertise" class="section">
  <div class="container">
    <SectionHeading
      title="What I Do"
      subtitle="Core areas of expertise â€” from writing code to keeping it running in production."
    />

    <div class="expertise-grid">
      {expertise.map((item, i) => {
        const c = colorMap[item.color] || colorMap.blue;
        return (
          <div class="expertise-card animate-on-scroll" style={`transition-delay: ${i * 0.1}s`}>
            <div class="card-shimmer"></div>
            <div class="card-accent" style={`background: ${c.bg}; border-color: ${c.border}`}></div>

            <div class="card-icon" style={`background: ${c.bg}; border-color: ${c.border}; color: ${c.text}`}>
              <Icon name={item.icon} size={22} />
            </div>

            <h3 class="card-title" style={`color: ${c.text}`}>{item.title}</h3>
            <p class="card-desc">{item.description}</p>

            <div class="card-tags">
              {item.tags.map((tag) => (
                <span class="tag" style={`background: ${c.tagBg}; border-color: ${c.tagBorder}; color: ${c.text}`}>
                  {tag}
                </span>
              ))}
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>

<style>
  .section {
    padding: var(--section-gap) 2rem;
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
  }

  .expertise-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.25rem;
  }

  .expertise-card {
    position: relative;
    padding: 2rem;
    border-radius: 16px;
    background: rgba(49, 50, 68, 0.25);
    border: 1px solid var(--ctp-surface0);
    overflow: hidden;
    transition: border-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
  }

  .expertise-card:hover {
    border-color: var(--ctp-surface1);
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.25);
  }

  .card-shimmer {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      120deg,
      transparent 30%,
      rgba(203, 166, 247, 0.03) 50%,
      transparent 70%
    );
    transform: translateX(-100%);
  }

  .expertise-card:hover .card-shimmer {
    animation: shimmer 0.8s ease forwards;
  }

  @keyframes shimmer {
    to { transform: translateX(100%); }
  }

  .card-accent {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    border: none;
    border-radius: 16px 16px 0 0;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .expertise-card:hover .card-accent {
    opacity: 1;
  }

  .card-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    border: 1px solid;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.25rem;
    transition: transform 0.3s ease, background 0.3s ease;
  }

  .expertise-card:hover .card-icon {
    transform: scale(1.08);
  }

  .card-title {
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 0.6rem;
  }

  .card-desc {
    font-size: 0.875rem;
    color: var(--ctp-subtext0);
    line-height: 1.75;
    margin-bottom: 1.25rem;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .tag {
    font-family: var(--font-mono);
    font-size: 0.72rem;
    padding: 0.2rem 0.6rem;
    border-radius: 6px;
    border: 1px solid;
    transition: all 0.25s ease;
  }

  .tag:hover {
    transform: translateY(-1px);
    filter: brightness(1.2);
  }

  @media (max-width: 768px) {
    .expertise-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
